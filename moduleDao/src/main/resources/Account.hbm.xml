<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package ="by.st.opt.payments.dao.pojos" auto-import="false" catalog="optpayments">
    <class name="Account">
        <meta attribute="class-description">
            This class contains the account detail. 
        </meta>
        <id name="accountId" type="long">
            <generator class="increment"/>
        </id>
        
        <property name="clientId" type="long"/>
        <property name="num" type="string"/>
        <property name="balance" type="double"/>
        <property name="dateOpen" type="date"/>
        <property name="statusId" type="int"/>
        
        <set name="accounts" table="T_CLIENT_ACCOUNT"
              inverse="true" lazy="true" fetch="select">
            <key>
                <column name="F_accountId" not-null="true"/>
            </key>
            <many-to-many class="Client" column="F_clientId" />
        </set>
    </class>
</hibernate-mapping>