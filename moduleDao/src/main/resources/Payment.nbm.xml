<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package ="by.st.opt.payments.dao.pojos" auto-import="false" catalog="optpayments">
    <class name="Payment">
        <meta attribute="class-description">
            This class contains the payment detail. 
        </meta>
        <id name="id" type="long">
            <generator class="increment"/>
        </id>
        
        <property name="clientId" type="long"/>
        <property name="accountId" type="long"/>
        <property name="orderId" type="long"/>
        <property name="amount" type="double"/>
        <property name="datePayment" type="date"/>
    </class>
</hibernate-mapping>