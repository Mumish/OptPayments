<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package ="by.st.opt.payments.dao.pojos" auto-import="false" catalog="optpayments">
    <class name="CreditCard">
        <meta attribute="class-description">
            This class contains the credit card detail. 
        </meta>
        <id name="id" type="long">
            <generator class="increment"/>
        </id>
        
        <property name="clientId" type="long"/>
        <property name="num" type="string"/>
        <property name="balance" type="double"/>
        <property name="dateOpen" type="date"/>
        <property name="statusId" type="int"/>
        <joined-subclass name="CreditCardSub" extends="CreditCard">
            <key column="card_id" />
            <property name="additional" type="string"/>
        </joined-subclass>
    </class>
</hibernate-mapping>