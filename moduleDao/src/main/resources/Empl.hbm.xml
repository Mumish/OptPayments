<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package ="by.st.opt.payments.dao.pojos" auto-import="false" catalog="optpayments">
    <class name="Empl">
        <meta attribute="class-description">
            This class contains the client detail. 
        </meta>
        <id name="emplId" column="F_emplId" type="long">
            <generator class="increment"/>
        </id>
        <property name="log" type="string"/>
        <property name="pass" type="string"/>
        
        <many-to-one name="client" class="Client" fetch="select">
            <column name="client_id" not-null="true" />
        </many-to-one>
 
    </class>
</hibernate-mapping>