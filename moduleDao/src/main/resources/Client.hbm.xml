<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package ="by.st.opt.payments.dao.pojos" auto-import="false" catalog="optpayments">
    <class name="Client">
        <meta attribute="class-description">
            This class contains the client detail. 
        </meta>
        <id name="clientId" type="long">
            <generator class="increment"/>
        </id>
        <property name="fio" type="string"/>
        <property name="login" type="string"/>
        <property name="password" type="string"/>

        <bag name="employees"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="F_emplId" not-null="true"/>
            </key>
            <one-to-many class="Empl" />
        </bag>
        
        <set name="accounts" table="T_CLIENT_ACCOUNT"
              inverse="true" lazy="true" fetch="select">
            <key>
                <column name="F_clientId" not-null="true"/>
            </key>
            <many-to-many class="Account" column="F_accountId" />
        </set>
        
    </class>
</hibernate-mapping>