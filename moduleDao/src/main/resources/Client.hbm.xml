<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package ="by.st.opt.payments.dao.pojos" auto-import="false" catalog="optpayments">
    <class name="Client" table="T_CLIENT">
        <meta attribute="class-description">
            This class contains the client detail. 
        </meta>
        <id name="id" type="long" column="id">
            <generator class="increment"/>
        </id>
        <property name="fio" column="F_FIO" type="string"/>
        <property name="login" column="F_LOGIN" type="string"/>
        <property name="password" column="F_PASSWORD" type="string"/>
    </class>
</hibernate-mapping>